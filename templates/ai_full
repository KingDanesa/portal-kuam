<body>
    <div class="container chat-container">
        <h2 class="text-center mb-4">ü§ñ –ò–ò –ü–æ–º–æ—â–Ω–∏–∫ (–ü–æ–ª–Ω–∞—è –≤–µ—Ä—Å–∏—è)</h2>

        <div id="chat-box" class="chat-box"></div>

        <div class="chat-input">
            <input type="text" id="full-chat-input" class="form-control" placeholder="–í–≤–µ–¥–∏—Ç–µ –∑–∞–ø—Ä–æ—Å...">
            <button class="btn btn-primary" onclick="sendFullChat()">–û—Ç–ø—Ä–∞–≤–∏—Ç—å</button>
        </div>

        <div class="text-center mt-3">
            <a href="/auditor/dashboard" class="btn btn-secondary">‚Üê –ù–∞–∑–∞–¥ –≤ –∫–∞–±–∏–Ω–µ—Ç –∞—É–¥–∏—Ç–æ—Ä–∞</a>
        </div>
    </div>

<script>
    async function sendFullChat() {
        const input = document.getElementById("full-chat-input");
        const msg = input.value.trim();
        if (!msg) return;

        const box = document.getElementById("chat-box");

        const userMsg = document.createElement("div");
        userMsg.className = "chat-message user";
        userMsg.innerHTML = `<b>–í—ã:</b> ${msg}`;
        box.appendChild(userMsg);

        const botMsg = document.createElement("div");
        botMsg.className = "chat-message bot";
        botMsg.innerHTML = `<b>–ò–ò:</b> –û–±—Ä–∞–±–æ—Ç–∫–∞...`;
        box.appendChild(botMsg);

        box.scrollTop = box.scrollHeight;
        input.value = "";

        try {
            const res = await fetch("/ai/query", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ query: msg })
            });

            const data = await res.json();

            if (data.reply_html) {
                botMsg.innerHTML = `<b>–ò–ò:</b> ${data.response}<br><div class="table-responsive mt-2">${data.reply_html}</div>`;
            } else {
                botMsg.innerHTML = `<b>–ò–ò:</b> ${data.response}`;
            }

            box.scrollTop = box.scrollHeight;
        } catch (err) {
            botMsg.innerHTML = `<b>–ò–ò:</b> ‚ùå –û—à–∏–±–∫–∞ –ø—Ä–∏ –ø–æ–ª—É—á–µ–Ω–∏–∏ –æ—Ç–≤–µ—Ç–∞.`;
        }
    }
</script>
